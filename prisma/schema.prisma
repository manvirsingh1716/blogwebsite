generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          String   @id @default(cuid())
  name        String   @unique
  description String   @default("")
  layout      Json     // Contains type, description, and structure
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pages       Page[]

  @@index([name])
}

model Page {
  id         String    @id @default(cuid())
  slug       String    @unique
  title      String
  content    Json      // Structured based on template requirements
  metadata   Json?     // Optional metadata based on template requirements
  status     String    @default("draft") // draft, published, archived
  templateId String
  template   Template  @relation(fields: [templateId], references: [id])
  parentId   String?
  parent     Page?     @relation("PageToPage", fields: [parentId], references: [id], onDelete: Cascade)
  children   Page[]    @relation("PageToPage")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  level      Int       @default(1) // Track the page level (1-7)
  showInNav  Boolean   @default(true) // Whether to show in navigation
  order      Int       @default(0) // For custom ordering within same level

  @@index([parentId])
  @@index([level])
  @@index([showInNav])
  @@index([status])
  @@index([order])
}
